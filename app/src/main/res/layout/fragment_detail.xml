<?xml version="1.0" encoding="utf-8"?>
<LinearLayoutLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uw.fragmentdemo.MovieActivity">

    <TextView
        android:id="@+id/txtMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder (2016)"
        android:textSize="32dp"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/txtMovieIMDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.imdb.com"
        android:textSize="18dp"
        android:autoLink="web"
        android:clickable="true"

        />


</LinearLayoutLayout>